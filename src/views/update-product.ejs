document.addEventListener("DOMContentLoaded", function () {
  $("#categorySelect").select2({
    placeholder: "Chọn danh mục món",
    allowClear: true,
    width: "resolve",
  });

  $("#categorySelect").on("change", function () {
    let selectedValue = $(this).val().trim().toLowerCase();

    let pizzaOptions = document.querySelectorAll(".pizzaOption");

    if (selectedValue.includes("pizza")) {
      pizzaOptions.forEach((option) => {
        option.style.display = "block";
        setTimeout(() => option.classList.add("show"), 10);
      });
    } else {
      pizzaOptions.forEach((option) => {
        option.classList.remove("show");
        setTimeout(() => (option.style.display = "none"), 390);
      });
    }
  });

  $("#types_pizza").select2({
    placeholder: "Chọn phân loại nhân bánh",
    allowClear: true,
    width: "resolve",
  });

  $("#pizzaBases").select2({
    placeholder: "Chọn phân loại đế bánh",
    allowClear: true,
    width: "resolve",
  });

  $("#pizzaBases").on("change", function () {
    let selectedValues = $(this).val() || [];
    if (selectedValues.includes("Mặc định")) {
      $(this).val(["Mặc định"]).trigger("change.select2");
    } else {
      $(this)
        .find("option")
        .filter(function () {
          return $(this).val() === "Mặc định";
        })
        .prop("selected", false);

      $(this).trigger("change.select2");
    }
  });
  
  $("#sizeSelect").select2({
    placeholder: "Chọn kích thước",
    allowClear: true,
    width: "resolve",
  });

  $("#sizeSelect").on("change", function () {
    let selectedValues = $(this).val() || [];

    // Nếu chọn "Mặc định", chỉ giữ lại giá trị này
    if (selectedValues.includes("Mặc định")) {
      $(this).val(["Mặc định"]).trigger("change.select2");
    } else {
      $(this).find("option[value='Mặc định']").prop("selected", false);
      $(this).trigger("change.select2");
    }

    updatePriceFields();
  });

  function updatePriceFields() {
    let selectedValues = ($("#sizeSelect").val() || []).map(value =>
      value.trim().toLowerCase()
    );

    $(".sizeOption").each(function () {
      let sizeType = $(this).data("size").trim().toLowerCase();
      if (selectedValues.includes(sizeType)) {
        $(this).fadeIn(150).addClass("show");
      } else {
        $(this).fadeOut(150).removeClass("show");
      }
    });
  }

  updatePriceFields();
  $("#categorySelect").trigger("change");
});


