                <form
                  id="productForm"
                  action="/admin/update-product/<%= product.product_id %>"
                  method="POST"
                  enctype="multipart/form-data"
                >
                  <div class="row">
                    <div class="col-12">
                      <div class="card">
                        <div class="card-header">
                          <h5>Thông tin sản phẩm</h5>
                        </div>
                        <div class="card-body">
                          <div class="input-items">
                            <div class="row gy-3">
                              <div class="col-xl-6">
                                <div class="input-box">
                                  <h6>Tên món</h6>
                                  <input
                                    type="text"
                                    name="product_name"
                                    placeholder="Nhập tên món"
                                    value="<%= product.product_name %>"
                                  />
                                </div>
                              </div>
                              <div class="col-xl-6">
                                <div class="input-box">
                                  <h6>Danh mục món</h6>
                                  <select
                                    id="categorySelect"
                                    name="category_name"
                                    class="js-example-basic-single w-100"
                                  >
                                    <option disabled selected>Chọn danh mục</option>
                                    <% if (categories.categoriesALL && categories.categoriesALL.length > 0) { %>
                                      <% categories.categoriesALL.forEach(category => { %>
                                        <option 
                                          value="<%= category.category_name %>" 
                                          <%= category.category_id === product.category_id ? "selected" : "" %>
                                        >
                                          <%= category.category_name %>
                                        </option>
                                      <% }) %>
                                    <% } else { %>
                                      <option>Hiện không có danh mục nào!</option>
                                    <% } %>
                                  </select>
                                </div>
                              </div>
                              <% if (product.level_pizza && product.types_pizza) { %>
                              <div class="col-xl-12 pizzaOption">
                                <div class="input-box">
                                  <h6>Dòng bánh Pizza</h6>
                                  <select name="level_pizza" class="js-example-basic-single w-100">
                                    <option disabled>Chọn phân loại dòng bánh pizza</option>
                                    <option value="Truyền thống" <%= product.level_pizza == 'Truyền thống' ? 'selected' : '' %>>Truyền thống</option>
                                    <option value="Cao cấp" <%= product.level_pizza == 'Cao cấp' ? 'selected' : '' %>>Cao cấp</option>
                                    <option value="Siêu cao cấp" <%= product.level_pizza == 'Siêu cao cấp' ? 'selected' : '' %>>Siêu cao cấp</option>
                                  </select>
                                </div>
                              </div>                              
                              <div class="col-xl-12 pizzaOption">
                                <div class="input-box">
                                  <h6>Phân loại nhân bánh Pizza</h6>
                                  <select id="types_pizza" name="types_pizza" class="js-example-basic-multiple w-100" multiple>
                                    <option disabled>Chọn phân loại nhân bánh pizza</option>
                                    <option value="Pizza thịt" <%= product.types_pizza.includes('Pizza thịt') ? 'selected' : '' %>>Pizza thịt</option>
                                    <option value="Pizza hải sản" <%= product.types_pizza.includes('Pizza hải sản') ? 'selected' : '' %>>Pizza hải sản</option>
                                    <option value="Pizza chay" <%= product.types_pizza.includes('Pizza chay') ? 'selected' : '' %>>Pizza chay</option>
                                  </select>
                                </div>
                              </div>
                              <div class="col-xl-12 pizzaOption">
                                <div class="input-box">
                                  <h6>Đế bánh pizza</h6>
                                  <select
                                    id="pizzaBases"
                                    name="pizza_bases"
                                    class="js-example-basic-multiple w-100"
                                    multiple
                                  >
                                    <option disabled>
                                      Chọn các loại đế bánh pizza
                                    </option>
                                    <% product.pizza_base.forEach(pizza_base => { %>
                                    <option value="Mặc định" <%= pizza_base.base_name.includes('Mặc định') ? 'selected' : '' %> >Mặc định</option>
                                    <option value="Mỏng giòn" <%= pizza_base.base_name.includes('Mỏng giòn') ? 'selected' : '' %> >Mỏng giòn</option>
                                    <option value="Truyền thống" <%= pizza_base.base_name.includes('Truyền thống') ? 'selected' : '' %> >Truyền thống</option>
                                    <option value="Xốp giòn" <%= pizza_base.base_name.includes('Xốp giòn') ? 'selected' : '' %> >Xốp giòn</option>
                                    <% }) %>
                                  </select>
                                </div>
                              </div>
                              <% } else { %>
                                <div class="col-xl-12 pizzaOption">
                                  <div class="input-box">
                                    <h6>Dòng bánh Pizza</h6>
                                    <select name="level_pizza" class="js-example-basic-single w-100">
                                      <option disabled selected>
                                        Chọn phân lại dòng bánh pizza
                                      </option>
                                      <option>Truyền thống</option>
                                      <option>Cao cấp</option>
                                      <option>Siêu cao cấp</option>
                                    </select>
                                  </div>
                                </div>
                                <div class="col-xl-12 pizzaOption">
                                  <div class="input-box">
                                    <h6>Phân loại nhân bánh Pizza</h6>
                                    <select id="types_pizza" name="types_pizza" class="js-example-basic-multiple w-100" multiple>
                                      <option disabled>
                                        Chọn phân loại nhân bánh pizza
                                      </option>
                                      <option>Pizza thịt</option>
                                      <option>Pizza hải sản</option>
                                      <option>Pizza chay</option>
                                    </select>
                                  </div>
                                </div>
                                <div class="col-xl-12 pizzaOption">
                                  <div class="input-box">
                                    <h6>Đế bánh pizza</h6>
                                    <select
                                      id="pizzaBases"
                                      name="pizza_bases"
                                      class="js-example-basic-multiple w-100"
                                      multiple
                                    >
                                      <option disabled>
                                        Chọn các loại đế bánh pizza
                                      </option>
                                      <option>Mặc định</option>
                                      <option>Mỏng giòn</option>
                                      <option>Truyền thống</option>
                                      <option>Xốp giòn</option>
                                    </select>
                                  </div>
                                </div>
                              <% } %>
                              <div class="col-12">
                                <div class="input-box">
                                  <h6>Tags</h6>
                                  <input
                                    type="text"
                                    name="tags"
                                    placeholder="Nhập nhãn của sản phẩm"
                                    value="<%= product._tag %>"
                                  />
                                </div>
                              </div>
                              <div class="col-12">
                                <div class="input-box">
                                  <div class="icon-state">
                                    <label class="switch-xsm mb-0">
                                      <input type="hidden" id="spicyHidden" name="spicy" value="Không cay" />
                                      <input
                                        type="checkbox"
                                        id="flexSwitchCheckDefault-1"
                                        name="spicy"
                                        value="Cay"
                                        <%= product.spicy == "Cay" ? "checked" : "" %>
                                      />
                                      <span class="slider round"></span>
                                    </label>
                                    <label class="form-check-label" for="flexSwitchCheckDefault-1">Cay</label>
                                  </div>
                                </div>
                              </div>
                              
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="card">
                        <div class="card-header">
