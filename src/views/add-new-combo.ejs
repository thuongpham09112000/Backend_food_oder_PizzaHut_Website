      document.addEventListener("DOMContentLoaded", function () {
        $("#categorySelect").select2({
          minimumResultsForSearch: 0,
          allowClear: true,
          width: "resolve",
        });

        $(document).on("change", "#categorySelect", function () {
          let selectedValues = $(this).val() || [];
          let selectedText = selectedValues.join(" ").trim().toLowerCase();

          let pizzaOptions = document.querySelectorAll(".pizzaOption");

          if (selectedText.includes("pizza")) {
            pizzaOptions.forEach((option) => {
              option.style.display = "block";
              setTimeout(() => option.classList.add("show"), 10);
            });
          } else {
            pizzaOptions.forEach((option) => {
              option.classList.remove("show");
              setTimeout(() => (option.style.display = "none"), 390);
            });
          }
        });

        $("#categorySelect").on("change", function () {
          let selectedCategories = $(this).val() || [];

          $("[data-category]").each(function () {
            let categoryName = $(this).data("category");

            if (selectedCategories.includes(categoryName)) {
              $(this).css("display", "block");
              requestAnimationFrame(() => {
                $(this).addClass("show");
              });
            } else {
              $(this).removeClass("show");
              setTimeout(() => {
                if (!$(this).hasClass("show")) $(this).css("display", "none");
              }, 600);
            }
          });
        });

        $(".sizeSelect").select2({
          placeholder: "Chọn kích thước sản phẩm",
          allowClear: true,
          width: "resolve",
        });

        $(".sizeSelect").on("change", function () {
          let selectedValues = $(this).val() || [];

          if (selectedValues.includes("Mặc định")) {
            $(this).val(["Mặc định"]).trigger("change.select2");
          } else {
            $(this).find("option[value='Mặc định']").prop("selected", false);
            $(this).trigger("change.select2");
          }
        });

        $("#productSelect").select2({
          minimumResultsForSearch: 0,
          allowClear: true,
          width: "100%",
          minimumResultsForSearch: 0,
        });

        $(document).on("change", "#productSelect", function () {
          let selectedValues = $(this).val() || [];
          let selectedText = selectedValues.length
            ? selectedValues.join(" ").toLowerCase()
            : "";

          let pizzaOptions = document.querySelectorAll(".productOption");

          pizzaOptions.forEach((option) => {
            if (selectedText.includes("pizza")) {
              option.style.display = "block";
              requestAnimationFrame(() => {
                option.classList.add("show");
              });
            } else {
              option.classList.remove("show");
              setTimeout(() => {
                if (!option.classList.contains("show"))
