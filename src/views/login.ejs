  <body>
    <!-- login section start -->
    <section class="log-in-section section-b-space">
      <a href="/admin" class="logo-login"
        ><img src="/images/logo/svg/logo.svg" class="img-fluid" alt=""
      /></a>
      <div class="container w-100">
        <div class="row">
          <div class="col-xl-5 col-lg-6 me-auto">
            <div class="log-in-box">
              <div class="log-in-title">
                <h3>Welcome To PizzaHut</h3>
                <h5>Đăng nhập tài khoản của bạn</h5>
              </div>

              <div class="input-box">
                <form class="row g-3" action="/admin/login" method="POST">
                  <div class="col-12">
                    <label class="col-form-label pt-0">Email</label>
                    <div class="form-floating theme-form-floating log-in-form">
                      <input
                        type="email"
                        name="email"
                        placeholder="example@gmail.com"
                      />
                    </div>
                  </div>

                  <div class="col-12">
                    <label class="col-form-label pt-0">Mật khẩu</label>
                    <div class="form-floating theme-form-floating log-in-form">
                      <input
                        type="password"
                        name="password"
                        placeholder="********"
                      />
                    </div>
                  </div>

                  <div class="col-12">
                    <div class="forgot-box">
                      <div class="form-check ps-0 m-0 remember-box">
                        <input
                          class="custom-checkbox p-0"
                          type="checkbox"
                          name="text"
                          id="flexCheckDefault"
                        />
                        <label class="form-check-label" for="flexCheckDefault"
                          >Ghi nhớ đăng nhập</label
                        >
                      </div>
                      <a href="/admin/forgot-password" class="forgot-password"
                        >Quên mật khẩu?</a
                      >
                    </div>
                  </div>

                  <div class="col-12">
                    <!-- <a
                      href="#"
                      class="btn btn-animation w-100 justify-content-center"
                      type="submit"
                      >Đăng nhập</a
                    > -->
                    <button
                      class="btn btn-animation w-100 justify-content-center"
                      type="submit"
                    >
                      Tạo tài khoản
                    </button>
                  </div>
                </form>
              </div>

