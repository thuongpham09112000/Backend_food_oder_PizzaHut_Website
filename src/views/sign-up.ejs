  <body>
    <!-- login section start -->
    <section class="log-in-section section-b-space">
      <a href="/admin" class="logo-login"
        ><img src="/images/logo/svg/logo.svg" class="img-fluid" alt=""
      /></a>
      <div class="container w-100">
        <div class="row">
          <div class="col-xl-5 col-lg-6 me-auto">
            <div class="log-in-box">
              <div class="log-in-title">
                <h3>Tạo tài khoản</h3>
                <h5>Nhập thông tin của bạn để tạo tài khoản</h5>
              </div>

              <div class="input-box">
                <form class="row g-3" action="/admin/sign-up" method="POST">
                  <div class="col-12">
                    <label class="col-form-label pt-0">Họ và tên</label>
                    <div class="form-floating theme-form-floating log-in-form">
                      <input
                        type="text"
                        name="name"
                        placeholder="Họ và tên"
                        required
                      />
                    </div>
                  </div>

                  <div class="col-12">
                    <label class="col-form-label pt-0">Email</label>
                    <div class="form-floating theme-form-floating log-in-form">
                      <input
                        type="email"
                        name="email"
                        placeholder="Email"
                        required
                      />
                    </div>
                  </div>

                  <div class="col-12">
                    <label class="col-form-label pt-0">Số điện thoại</label>
                    <div class="form-floating theme-form-floating log-in-form">
                      <input
                        type="tel"
                        name="phone_number"
                        placeholder="Số điện thoại"
                        required
                      />
                    </div>
                  </div>

                  <div class="col-12">
                    <label class="col-form-label pt-0">Địa chỉ</label>
                    <div class="form-floating theme-form-floating log-in-form">
                      <input
                        type="text"
                        name="address"
                        placeholder="Địa chỉ"
                        required
                      />
                    </div>
                  </div>

                  <div class="col-12">
                    <label class="col-form-label pt-0">Mật khẩu</label>
                    <div class="form-floating theme-form-floating log-in-form">
                      <input
                        type="password"
                        name="password"
                        placeholder="8 ký tự trở lên"
                        required
                      />
                    </div>
                  </div>

                  <div class="col-12">
                    <label class="col-form-label pt-0">Xác nhận mật khẩu</label>
                    <div class="form-floating theme-form-floating log-in-form">
                      <input
                        type="password"
                        name="confirm_password"
                        placeholder="Nhập lại mật khẩu"
                        required
                      />
                    </div>
                  </div>

