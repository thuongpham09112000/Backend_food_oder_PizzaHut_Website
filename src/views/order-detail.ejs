                              id="Settings"
                              role="tabpanel"
                              aria-labelledby="Settings-tab"
                            >
                              <div class="input-items">
                                <div class="row gy-3">
                                  <div class="col-12">
                                    <div class="input-box driver-details-box">
                                      <h6>Đơn hàng</h6>
                                      <div class="driver-details-item">
                                        <div>
                                          <div>
                                            <p>Khách hàng :</p>
                                            <h5>
                                              <%=order.recipientInfo.full_name%>
                                            </h5>
                                          </div>
                                          <div>
                                            <p>Thời gian dự kiến :</p>
                                            <h5>
                                              <% if (order.order_type === 'Pick up') { %>
                                                15 phút
                                              <% } else if (order.order_type === 'Delivery') { %>
                                                30 phút
                                              <% } else { %>
                                                Không xác định
                                              <% } %>
                                            </h5>
                                          </div>                                          
                                        </div>
                                      </div>
                                    </div>
                                  </div>
                                  <div class="col-12">
                                    <div class="input-box driver-details-box">
                                      <h6>Trạng thái</h6>                        
                                      <!-- Dropdown thay đổi trạng thái -->
                                      <form id="orderStatusForm-<%= order.order_id %>" action="/admin/orders/<%= order.order_id %>/update-status" method="POST">
                                        <input type="hidden" name="order_id" value="<%= order.order_id %>">
                                        <select 
                                          name="order_status" 
                                          class="js-example-basic-single w-100 status-select" 
                                          data-minimum-results-for-search="Infinity"
                                          onchange="confirmStatusChange(event, <%= order.order_id %>)"
                                        >
                                          <% 
                                            const statusOptions = {
                                              'Pending': 'Chờ xác nhận',
                                              'Processing': 'Đang xử lý',
                                              'Delivering': 'Đang giao hàng',
                                              'Completed': 'Hoàn tất',
                                              'Cancelled': 'Đã hủy',
                                              'Done': 'Đã hoàn thành'
                                            };
                                            for (let key in statusOptions) { 
                                          %>
                                            <option value="<%= key %>" <%= order.order_status === key ? 'selected' : '' %>>
                                              <%= statusOptions[key] %>
                                            </option>
                                          <% } %>
                                        </select>
                                      </form>
                                      <!-- Danh sách điểm giao hàng -->
                                      <ul class="delivery-list">
                                        <li>
                                          <img src="/images/svg/driver.svg" alt="" />
                                          <div>
                                            <h5>Địa chỉ giao hàng</h5>
                                            <p><%= order.recipientInfo.delivery_address %></p>
                                          </div>
                                        </li>
                                        <li>
                                          <img src="/images/svg/user-map.svg" alt="" />
                                          <div>
                                            <h5>Thôn tin liên hệ</h5>
                                            <p><%= order.recipientInfo.phone_number%></p>
                                          </div>
                                        </li>
                                      </ul>
                                    </div>
                                  </div>
                                  
                                  <% 
                                  const statusLabels = {
                                    'Pending': 'Chờ xác nhận',
                                    'Processing': 'Đang xử lý',
                                    'Delivering': 'Đang giao hàng',
                                    'Completed': 'Hoàn tất',
                                    'Cancelled': 'Đã hủy',
                                    'Done': 'Đã hoàn thành'
                                  };
                                
                                  let statusSteps = [];
                                
                                  if (order.order_status === 'Cancelled') {
                                    // TH3: Đã hủy
                                    statusSteps = ['Cancelled'];
                                  } else if (order.order_status === 'Done') {
                                    // TH2: Đã hoàn thành
                                    statusSteps = ['Done'];
                                  } else {
                                    // TH1: Quy trình bình thường
                                    statusSteps = ['Pending', 'Processing', 'Delivering', 'Completed'];
                                  }
                                
                                  const currentIndex = Math.max(0, statusSteps.indexOf(order.order_status || 'Pending'));
                                %>
                                
                                <ol class="progtrckr">
                                  <% for (let i = 0; i < statusSteps.length; i++) { %>
                                    <li class="<%= i <= currentIndex ? 'progtrckr-done' : 'progtrckr-todo' %>">
                                      <h5><%= statusLabels[statusSteps[i]] %></h5>
                                      <h6><%= i <= currentIndex ? 'Hoàn thành' : 'Đang chờ' %></h6>
                                    </li>
                                  <% } %>
                                </ol>                                                      
                                
                                </div>
                              </div>
