            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Xác nhận',
            cancelButtonText: 'Hủy',
            reverseButtons: true
            }).then((result) => {
            if (result.isConfirmed) {
                // Submit form nếu xác nhận
