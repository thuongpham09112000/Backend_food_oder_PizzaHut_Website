                                <ul>
                                    <% order.orderDetails.forEach(function(detail) { %>
                                    <li>
                                        <div class="horizontal-product-box d-flex mb-3">
                                        <!-- Hình ảnh món ăn -->
                                        <div class="product-image me-3">
                                            <img src="<%= detail.productInfo?.image_url %>" alt="<%= detail.productInfo?.product_name %>" style="width: 80px; height: 80px; object-fit: cover; border-radius: 8px;">
